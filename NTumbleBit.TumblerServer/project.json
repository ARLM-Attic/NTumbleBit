{
    "dependencies": {
        "Microsoft.NETCore.App": {
            "type": "platform",
            "version": "1.1.1"
        },
        "NTumbleBit": "1.0.0-*",
        "NTumbleBit.Common": "1.0.0-*",
        "Microsoft.AspNetCore.Mvc.Core": "1.1.2",
        "NBitcoin": "3.0.2.6",
        "DBreeze": "1.83.0",
        "Microsoft.AspNetCore.Diagnostics": "1.1.1",
        "Microsoft.AspNetCore.Mvc.ViewFeatures": "1.1.2",
        "Microsoft.AspNetCore.Server.IISIntegration": "1.1.1",
        "Microsoft.AspNetCore.Server.Kestrel": "1.1.1",
        "Microsoft.Extensions.Configuration.Binder": "1.1.1",
        "Microsoft.Extensions.Configuration.CommandLine": "1.1.1",
        "Microsoft.Extensions.Logging.Console": "1.1.1",
        "Microsoft.Extensions.Logging.Filter": "1.1.1"
    },

    "tools": {
        "Microsoft.AspNetCore.Server.IISIntegration.Tools": "1.0.0-preview2-final"
    },

    "frameworks": {
        "netcoreapp1.1": {
            "imports": [
                "dotnet5.6",
                "portable-net45+win8"
            ]
        }
    },

    "buildOptions": {
        "emitEntryPoint": true,
        "preserveCompilationContext": true
    },

    "runtimeOptions": {
        "configProperties": {
            "System.GC.Server": true
        }
    },

    "publishOptions": {
        "include": [
            "wwwroot",
            "web.config"
        ]
    },

    "scripts": {
        "postpublish": [ "dotnet publish-iis --publish-folder %publish:OutputPath% --framework %publish:FullTargetFramework%" ]
    }
}
